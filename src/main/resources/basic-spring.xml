<bean id="dateFormat" class="java.text.SimpleDateFormat">
		<constructor-arg value="yyyy-MM-dd" />
	</bean>
	
<bean id="movie" class="com.rollingstone.springframework.basic.simple.example.Movie">  
	<property name="movieName" value="Saving Private Ryan"></property>
	<!-- <property name="releaseDate">
		 <value>2000-01-01</value>
	</property>  -->
	<property name="releaseDate">
			<bean factory-bean="dateFormat" factory-method="parse">
				<constructor-arg value="2001-01-31" />
			</bean>
		</property>
	<property name="shootingStartDate">
			<bean factory-bean="dateFormat" factory-method="parse">
				<constructor-arg value="1999-01-01" />
			</bean>
		</property>
	<property name="director">
		 <ref bean="director"/>
	</property>    
</bean>  

<bean id="director" class="com.rollingstone.springframework.basic.simple.example.Director">  
	<property name="directorName" value="Steven Spielburg"></property>
	<property name="directorID" value="1"></property>
</bean>
  
</beans> 